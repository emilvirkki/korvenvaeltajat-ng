{
    "require": {
        "symfony/config": "^4.1",
        "symfony/http-kernel": "^4.1",
        "symfony/http-foundation": "^4.1",
        "symfony/routing": "^4.1",
        "symfony/dependency-injection": "^4.1",
        "symfony/framework-bundle": "^4.1",
        "doctrine/annotations": "^1.6",
        "symfony/twig-bundle": "^4.1",
        "symfony/dotenv": "^4.1",
        "contentful/contentful-bundle": "^3.0",
        "knplabs/knp-markdown-bundle": "^1.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0
    },
    "scripts": {
        "run": "php -S localhost:8080 -t public",
        "sass-compile": "sass --style compressed public/scss/screen.scss public/styles/screen.css",
        "sass-watch": "sass --style compressed --watch public/scss:public/styles"
    }
}
