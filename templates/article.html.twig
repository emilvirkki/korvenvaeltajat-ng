{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
	{% include 'partials/navigation.html.twig' %}
	<main id="content">
		<div class="c-text-header">
			<h1>{{ article.title }}</h1>
		</div>

		<span class="c-meta">
			{% if article.authorName %}
				{{ article.authorName }}
			{% endif %}
			{% if article.createdOverride %}
				{% include 'partials/date.html.twig' with { date: article.createdOverride } %}
			{% else %}
				{% include 'partials/date.html.twig' with { date: article.created } %}
			{% endif %}
		</span>

		<div class="c-bodytext">
			{{ article.content|markdown }}

			{% include 'partials/attachments.html.twig' with { attachments: article.attachments } %}
		</div>
	</main>
	{% include 'partials/footer.html.twig' with { variant: 'v-colored' } %}
{% endblock %}
