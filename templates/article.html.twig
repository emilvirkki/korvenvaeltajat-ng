{% extends "layout.html.twig" %}

{% block title %}{{ article.title }}{% endblock %}

{% block content %}
	{% include 'partials/navigation.html.twig' %}
	<main class="c-article-full">
		<div class="c-text-header">
			<h1>{{ article.title }}</h1>
		</div>

		<span class="c-article-full__meta">
			{% if article.authorName %}
				{{ article.authorName }} {{ article.created|date('d.m.Y') }}
			{% else %}
				{{ article.created|date('d.m.Y') }}
			{% endif %}
		</span>

		<div class="c-article-full__content">
			{{ article.content|markdown }}

			{% include 'partials/attachments.html.twig' with { attachments: article.attachments } %}
		</div>
	</main>
{% endblock %}
