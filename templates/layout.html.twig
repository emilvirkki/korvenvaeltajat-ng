<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>{% block title %}{% endblock %} – Korven Vaeltajat</title>
		<link rel="stylesheet" href="/styles/screen.css">
		<link href="https://fonts.googleapis.com/css?family=PT+Sans:400,700|Source+Sans+Pro:900" rel="stylesheet">
	</head>
	<body>
		<header class="c-navigation">
			<a href="#content" class="visually-hidden">Hyppää sisältöön</a>
			<h1><a href="{{ path('home') }}">Korven Vaeltajat</a></h1>
			{%
				set pages = [
					{
						'title': 'Etusivu',
						'route': 'home'
					},
					{
						'title': 'Mikä partio?',
						'route': 'about_scouting'
					},
					{
						'title': 'Lippukunta',
						'route': 'troop'
					},
					{
						'title': 'Yhteystiedot',
						'route': 'contact'
					},
					{
						'title': 'Liity mukaan!',
						'route': 'join',
						'class': 'c-button'
					}
				]
			%}

			<ul>
			{% for page in pages %}
				{% if (page.route == template) %}
					{% set classes = [ 'c-navigation__active', page.class ] %}
				{% else %}
					{% set classes = [ page.class ] %}
				{% endif %}
	        	<li><a href="{{ path(page.route) }}" class="{{ classes|join(' ') }}">{{ page.title }}</a></li>
			{% endfor %}
			</ul>
		</header>
		{% block content %}{% endblock %}
	</body>
</html>
