<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>{% block title %}{% endblock %} – Korven Vaeltajat</title>
		<link rel="stylesheet" href="/styles/screen.css">
	</head>
	<body>
		<h1><a href="{{ path('home') }}">Korven Vaeltajat</a></h1>
		{%
			set pages = [
				{
					'title': 'Etusivu',
					'route': 'home'
				},
				{
					'title': 'Mikä partio?',
					'route': 'about_scouting'
				},
				{
					'title': 'Lippukunta',
					'route': 'troop'
				},
				{
					'title': 'Yhteystiedot',
					'route': 'contact'
				}
			]
		%}

		<ul>
		{% for page in pages %}
        	<li><a href="{{ path(page.route) }}"
				{% if (page.route == template) %}
					class="active"
				{% endif %}
        	>{{ page.title }}</a></li>
		{% endfor %}
		</ul>

		<!-- template: {{ template }} -->
		{% block content %}{% endblock %}
	</body>
</html>
