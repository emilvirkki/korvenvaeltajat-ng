{% extends "layout.html.twig" %}

{% block title %}{{ snippets.frontPageSlogan }}{% endblock %}

{% block content %}
	{% include 'partials/navigation.html.twig' with { variant: 'v-inverse' } %}
	<main id="content">
		<header class="c-image-header">
			<h1>{{ snippets.frontPageSlogan }}</h1>
		</header>

		<div class="c-intro">
			<div class="c-intro__content">
				{{ snippets.frontPageIntro|markdown }}
			</div>
			<div class="c-intro__cta">
				<a href="{{ path('join') }}" class="c-button">Liity mukaan!</a>
			</div>
		</div>

		<div class="c-grid-container v-bg-dark v-grid-2col-7-5 v-order-reverse">

			<section class="c-section v-inverse c-grid-container__second">
				<h2>Tapahtumat</h2>

				{% if events %}
					{% include 'partials/event_list.html.twig' %}
					<div class="c-section__actions">
						<a href="{{ path('events') }}" class="c-button">Kaikki tapahtumat</a>
					</div>
				{% else %}
					<div class="c-panel v-centered v-empty">
						Ei tapahtumia lähiaikoina
					</div>
				{% endif %}
			</section>

			<section class="c-section v-inverse c-grid-container__first">
				<h2>Ajankohtaista</h2>

				{% include 'partials/article_list.html.twig' %}

				<div class="c-section__actions">
					<a href="{{ path('articles') }}" class="c-button">Näytä lisää</a>
				</div>
			</section>

		</div>
	</main>
	{% include 'partials/footer.html.twig' %}

{% endblock %}
