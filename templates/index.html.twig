{% extends "layout.html.twig" %}

{% block title %}Etusivu{% endblock %}

{% block content %}
	<h2>Artikkelit</h2>
	{% for article in articles %}
		{% include 'partials/article.html.twig' %}
	{% endfor %}
	<div>
		<a href="{{ path('articles') }}">Näytä lisää</a>
	</div>

	<h2>Tapahtumat</h2>
	<ul>
	{% for event in events %}
		<li>
			{# TODO päivämäärien ja kellonaikojen käsittely #}
			{% if event.datetimeEnd %}
				{{ event.datetimeStart|date('d.m.Y') }} – {{ event.datetimeEnd|date('d.m.Y') }}
			{% else %}
				{{ event.datetimeStart|date('d.m.Y') }}
			{% endif %}
			{{ event.title }}
			{% if event.registrationLink %}
				<a href="{{ event.registrationLink }}">Ilmoittaudu</a>
			{% endif %}
			{% if event.content %}
				<a href="{{ path('event', { slug: event.slug }) }}">Lisätiedot</a>
			{% endif %}
		</li>
	{% endfor %}
	</ul>

{% endblock %}
