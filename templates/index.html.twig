{% extends "layout.html.twig" %}

{% block title %}Etusivu{% endblock %}

{% block content %}
	<h2>Artikkelit</h2>
	{% for article in articles %}

		{% set link = path('article', { slug: article.slug }) %}

		<h3><a href="{{ link }}">{{ article.title }}</a></h3>
		{{ article.content|markdown|striptags|truncate(140, true) }}

	{% endfor %}
{% endblock %}
