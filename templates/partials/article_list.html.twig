<ul class="c-article-list">
{% for article in articles %}
	<li class="c-article">
		{% set link = path('article', { slug: article.slug }) %}

		<span class="c-article__date">
			{% if article.createdOverride %}
				{% include 'partials/date.html.twig' with { date: article.createdOverride } %}
			{% else %}
				{% include 'partials/date.html.twig' with { date: article.created } %}
			{% endif %}
		</span>
		<h3><a href="{{ link }}">{{ article.title }}</a></h3>
		{{ article.content|markdown|striptags|truncate(300, true) }}
		<div class="c-article__actions">
			<a href="{{ link }}" class="c-button v-small">Lue lisää</a>
		</div>
	</li>
{% endfor %}
</ul>
